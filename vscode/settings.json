// Visual Studio Code settings
// Place in: ~/.config/Code/User/settings.json on Linux
//           ~/Library/Application Support/Code/User/settings.json on Mac
{
    "editor.fontFamily": "Hasklig",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "files.trimTrailingWhitespace": true,
    "editor.renderIndentGuides": true,
    "window.zoomLevel": 0,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        },
        {
            "before": ["J", "K"],
            "after": ["<Esc>"]
        }
    ],
    "vim.useSystemClipboard": true,
    "vim.handleKeys": {
        "<C-b>": false,
        "<C-f>": false,
        "<C-a>": false,
        "<C-j>": false
    },
    "extensions.ignoreRecommendations": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Solarized Dark",
    // whitelist numpy to remove lint errors
    "python.linting.pylintArgs": [
        "--extension-pkg-whitelist=numpy"
    ],
    "editor.renderWhitespace": "none",
    "rust.rustup": {
        "toolchain": "stable-x86_64-unknown-linux-gnu"
    },
    "rust.mode": "rls",
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\bash.exe",
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "cmake-tools-helper.cmake_download_path": "/home/carter/.vscode/extensions/maddouri.cmake-tools-helper-0.1.1/cmake_download"
}
