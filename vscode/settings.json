// Visual Studio Code settings
// Place in: ~/.config/Code/User/settings.json on Linux
//           ~/Library/Application Support/Code/User/settings.json on Mac
{
    "breadcrumbs.enabled": true,
    "editor.fontFamily": "Hasklig",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "none",
    "editor.rulers": [80],
    "editor.scrollBeyondLastLine": false,
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    // Don't show useless openEditors window
    "explorer.openEditors.visible": 0,
    "extensions.showRecommendationsOnlyOnDemand": true,
    // Only associate HTML files in django projects with django HTML
    "files.associations": {
        "**/templates/*.html": "django-html",
        "**/templates/*": "django-txt",
        "**/requirements{/**,*}.{txt,in}": "pip-requirements"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.idea": true,
        "**/__pycache__": true,
        "**/*.pyc": true
    },
    "files.insertFinalNewline": true,
    "files.hotExit": "onExitAndWindowClose",
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "window.zoomLevel": -0.25,
    "window.titleBarStyle": "custom",
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\bash.exe",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Solarized Dark",
    "workbench.iconTheme": "material-icon-theme",

    // Language specific settings
    "[html]": {
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
    },
    "[django-html]": {
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
    },

    // Extension settings
    "cSpell.ignoreRegExpList": [
        // Match abbreviations
        "\b(?:[A-Z]){2,}",
        // Match email
        "<?[\\w.\\-+]+@\\w+(\\.\\w+)+>?"
    ],
    "cSpell.diagnosticLevel": "Hint",
    // Emmet enthusiasts should have this to their configuration as well:
    "emmet.includeLanguages": {"django-html": "html"},
    // .NET Core runtime instead of .NET
    "FSharp.fsacRuntime": "netcore",
    "latex-workshop.latex.clean.fileTypes":[
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.synctex.gz",
        "*.run.xml",
        "*.tex.bak",
        "*.bcf",
        "*.pyg",
        "*.synctex.gz(busy)",
        // cprotect package
        "*.cpt"
    ],
    "latex-workshop.latex.tools": [
        {
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-shell-escape",
                "%DOC%"
            ],
            "name": "Latexmk"
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "toolchain",
            "tools": [
                "Latexmk"
            ]
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.message.update.show": false,
    // whitelist numpy to remove lint errors
    "python.linting.pylintArgs": [
        "--extension-pkg-whitelist=numpy"
    ],
    "todohighlight.defaultStyle": {
        "color": ""
    },
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "backgroundColor": "#002b36",
            "color": "#b58900",
            "fontWeight": "bold"
        },
        {
            "text": "FIXME:",
            "backgroundColor": "#002b36",
            "color": "#d33682",
            "fontWeight": "bold"
        },
        // FIXME(carter):
    ],
    "todohighlight.include": [
        "**/*.py",
        "**/*.tex",
        "**/*.cpp",
        "**/*.hpp",
        "**/*.c",
        "**/*.h",
        "**/*.sh",
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/*.cs",
        "**/*.fs"
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        },
        {
            "before": ["J", "K"],
            "after": ["<Esc>"]
        }
    ],
    "vim.useSystemClipboard": true,
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-j>": false,
        "<C-k>": false,
        "<C-n>": false,
        "<C-t>": false,
        "<C-N>": false,
        "<C-w>": false,
        "<C-o>": false,
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "git.confirmSync": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
}
