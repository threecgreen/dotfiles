// Visual Studio Code settings
// Place in: ~/.config/Code/User/settings.json on Linux
//           ~/Library/Application Support/Code/User/settings.json on Mac
{
    "breadcrumbs.enabled": true,
    "editor.fontFamily": "Hasklig",
    "editor.fontSize": 12,
    "editor.fontLigatures": true,
    "editor.guides.indentation": true,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.rulers": [100],
    "editor.scrollBeyondLastLine": false,
    "editor.wordWrap": "off",
    // "editor.wrappingIndent": "indent",
    // Don't show useless openEditors window
    "explorer.openEditors.visible": 0,
    // Only associate HTML files in django projects with django HTML
    "files.associations": {
        "**/requirements{/**,*}.{txt,in}": "pip-requirements",
        "*.html": "html"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.idea": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/node_modules": true,
    },
    "files.insertFinalNewline": true,
    "files.hotExit": "onExitAndWindowClose",
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "window.zoomLevel": -0.25,
    "search.useGlobalIgnoreFiles": true,
    "search.useIgnoreFiles": true,
    "window.titleBarStyle": "custom",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Solarized Dark",
    "workbench.iconTheme": "material-icon-theme",

    // Language specific settings
    "[html]": {
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
    },
    "[django-html]": {
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
    },
    "[rust]": {
        "editor.formatOnSave": true,
    },
    "[cpp]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
        "editor.detectIndentation": false,
    },
    "[proto3]": {
        "editor.tabSize": 2,
    },

    // Extension settings
    // Use clangd
    "C_Cpp.intelliSenseEngine": "Disabled",
    "C_Cpp.autocomplete": "Disabled",
    "C_Cpp.errorSquiggles": "Disabled",
    // Emmet enthusiasts should have this to their configuration as well:
    "emmet.includeLanguages": {"django-html": "html"},
    "vscode-neovim.neovimExecutablePaths.linux": "nvim",
    "vscode-neovim.neovimInitVimPaths.linux": "",
    "python.linting.pylintEnabled": true,
    // whitelist numpy to remove lint errors
    "python.linting.pylintArgs": [
        "--extension-pkg-whitelist=numpy"
    ],
    "python.showStartPage": false,
    "todohighlight.defaultStyle": {
        "color": ""
    },
    "todohighlight.keywords": [
        {
            "text": "TODO(cg):",
            "backgroundColor": "#002b36",
            "color": "#b58900",
            "fontWeight": "bold"
        },
        {
            "text": "TODO:",
            "backgroundColor": "#002b36",
            "color": "#b58900",
            "fontWeight": "bold"
        },
        {
            "text": "FIXME:",
            "backgroundColor": "#002b36",
            "color": "#d33682",
            "fontWeight": "bold"
        },
    ],
    "todohighlight.include": [
        "**/*.py",
        "**/*.tex",
        "**/*.cpp",
        "**/*.hpp",
        "**/*.c",
        "**/*.h",
        "**/*.sh",
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/*.cs",
        "**/*.fs"
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        },
        {
            "before": ["J", "K"],
            "after": ["<Esc>"]
        }
    ],
    "vim.enableNeovim": true,
    "vim.useSystemClipboard": true,
    "vim.handleKeys": {
        "<C-a>": true,
        "<C-j>": false,
        "<C-k>": false,
        "<C-n>": true,
        "<C-t>": false,
        "<C-N>": false,
        "<C-w>": true,
        "<C-o>": false,
        "<C-g>": false,
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "git.confirmSync": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "extensions.ignoreRecommendations": true,
    "latex-workshop.message.update.show": false,
    "latex-workshop.view.pdf.viewer": "tab",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "lldb.suppressUpdateNotifications": true,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "workbench.editor.empty.hint": "hidden",
}
